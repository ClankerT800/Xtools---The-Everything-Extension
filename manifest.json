{
  "manifest_version": 3,
  "name": "Xtools - The Everything Extension",
  "version": "1.0",
  "description": "All the the tools you'll ever need in one place.",
  "permissions": [
    "contextMenus",
    "activeTab",
    "downloads",
    "storage",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
